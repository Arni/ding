      ),
      'loan' => array(
        'prefix' => 'loan',
        'file' => $path . '/includes/fbs.loan.inc',
      ),
      'reservation' => array(
        'prefix' => 'reservation',
        'file' => $path . '/includes/fbs.reservation.inc',
