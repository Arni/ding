/**
 * Implements hook_menu().
 */
function ding_adhl_frontend_menu() {
  $path = drupal_get_path('module', 'ding_adhl_frontend');
  $items = array();

  $items['admin/config/ding_adhl_frontend'] = array(
    'title' => 'Ting recommendation panes',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('ding_adhl_frontend_settings_form'),
    'access arguments' => array('administer recommendation panes'),
    'file' => 'ding_adhl_frontend.admin.inc',
    'file path' => $path,
  );

  return $items;
}

