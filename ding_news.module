<?php
/**
 * @file
 * Create news content type and displays.
 */

/**
 * Implements hook_ding_library_menu_links().
 */
function ding_news_ding_library_menu_links($node) {
  $links = array();

  if (!empty($node->group_group[LANGUAGE_NONE][0]['value']) || !empty($node->group_group[$node->language][0]['value'])) {
    $links['news'] = array(
      'title' => t('News', array(), array(
        'langcode' => $node->language,
      )),
      'url_prefix' => 'news',
    );
  }

  return $links;
}

include_once('ding_news.features.inc');

