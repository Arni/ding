<?php
/**
 * @file
 * Code for the Ding event feature.
 */

/**
 * Implements hook_enable().
 *
 * Create taxonomy vocabolary if needed.
 */
function ding_event_enable() {
  if (!taxonomy_vocabulary_machine_name_load('ding_event')) {
    $vocabulary = (object) array(
      'name' => t('Event category'),
      'machine_name' => 'ding_event',
      'module' => 'ding_event',
    );
    taxonomy_vocabulary_save($vocabulary);
  }
}

/**
 * Implements hook_ding_library_menu_links().
 */
function ding_event_ding_library_menu_links($node) {
  $links = array();

  if (!empty($node->group_group[$node->language][0]['value'])) {
    $links['events'] = array(
      'title' => t('Events'),
      'url_prefix' => 'events',
    );
  }

  return $links;
}

include_once('ding_event.features.inc');

